// {Mandala Geometrico Artistico - Ajustado para canvas 516x354}
CENTRO;
PONRUMBO 0;
PONCOLORLAPIZ AZUL;

INIC radio = 60;
INIC petalos = 12;
INIC angulo_petalo = 0;

HAZ angulo_petalo (DIVISION 360 petalos);

REPITE petalos [
    BAJALAPIZ;
    REPITE 2 [
        AVANZA radio;
        GIRADERECHA 60;
        AVANZA radio;
        GIRADERECHA 120;
    ];
    SUBELAPIZ;
    CENTRO;
    GIRADERECHA angulo_petalo;
];

CENTRO;
PONRUMBO 0;
PONCOLORLAPIZ ROJO;

INIC tam_estrella = 50;
REPITE 8 [
    BAJALAPIZ;
    REPITE 5 [
        AVANZA tam_estrella;
        GIRADERECHA 144;
    ];
    SUBELAPIZ;
    CENTRO;
    GIRADERECHA 45;
];

CENTRO;
PONRUMBO 0;
PONCOLORLAPIZ NEGRO;

INIC radio_circulo = 75;
INIC lados_poligono = 36;
INIC lado_aproximado = 0;

HAZ lado_aproximado (DIVISION (PRODUCTO radio_circulo 6) lados_poligono);

BAJALAPIZ;
REPITE lados_poligono [
    AVANZA lado_aproximado;
    GIRADERECHA (DIVISION 360 lados_poligono);
];
SUBELAPIZ;

CENTRO;
PONRUMBO 0;
PONCOLORLAPIZ AZUL;

INIC tam_espiral = 3;
INIC iteraciones_espiral = 0;

BAJALAPIZ;
REPITE 50 [
    AVANZA tam_espiral;
    GIRADERECHA 89;
    HAZ tam_espiral (SUMA tam_espiral 1.5);
];
SUBELAPIZ;

CENTRO;
PONRUMBO 0;

INIC dist_cuadrados = 25;
INIC num_cuadrados = 5;
INIC i = 0;

REPITE num_cuadrados [
    PONCOLORLAPIZ ROJO;
    SI (IGUALES? (PRODUCTO 2 (DIVISION i 2)) i) [
        PONCOLORLAPIZ AZUL;
    ];
    BAJALAPIZ;
    REPITE 4 [
        AVANZA dist_cuadrados;
        GIRADERECHA 90;
    ];
    SUBELAPIZ;
    HAZ dist_cuadrados (SUMA dist_cuadrados 12);
    INC [i 1];
];

CENTRO;
PONXY 120 90;
PONCOLORLAPIZ NEGRO;

INIC zig_tam = 20;
INIC zig_count = 0;

BAJALAPIZ;
REPITE 6 [
    AVANZA zig_tam;
    GIRADERECHA 90;
    AVANZA zig_tam;
    GIRAIZQUIERDA 90;
];
SUBELAPIZ;

CENTRO;
PONXY -120 90;
PONRUMBO 0;
PONCOLORLAPIZ ROJO;

INIC rosa_tam = 40;
BAJALAPIZ;
REPITE 18 [
    REPITE 2 [
        AVANZA rosa_tam;
        GIRADERECHA 45;
        AVANZA rosa_tam;
        GIRADERECHA 135;
    ];
    GIRADERECHA 20;
];
SUBELAPIZ;

CENTRO;
PONXY 120 -90;
PONCOLORLAPIZ AZUL;

INIC hex_tam = 15;
INIC hex_capas = 0;

REPITE 4 [
    BAJALAPIZ;
    REPITE 6 [
        AVANZA hex_tam;
        GIRADERECHA 60;
    ];
    SUBELAPIZ;
    HAZ hex_tam (SUMA hex_tam 10);
    GIRADERECHA 30;
];

CENTRO;
PONXY -120 -90;
PONCOLORLAPIZ NEGRO;

INIC trian_tam = 50;
BAJALAPIZ;
REPITE 3 [
    AVANZA trian_tam;
    GIRADERECHA 120;
];
SUBELAPIZ;

AVANZA (DIVISION trian_tam 2);
GIRADERECHA 90;
AVANZA (DIVISION trian_tam 4);
GIRAIZQUIERDA 90;

BAJALAPIZ;
REPITE 3 [
    AVANZA (DIVISION trian_tam 2);
    GIRADERECHA 120;
];
SUBELAPIZ;

CENTRO;
PONRUMBO 0;
PONCOLORLAPIZ ROJO;

INIC radio_rayo = 90;
BAJALAPIZ;
REPITE 16 [
    AVANZA radio_rayo;
    RETROCEDE radio_rayo;
    GIRADERECHA (DIVISION 360 16);
];
SUBELAPIZ;

CENTRO;
PONRUMBO 45;
PONCOLORLAPIZ AZUL;

INIC ondas = 0;
INIC onda_tam = 15;

BAJALAPIZ;
REPITE 15 [
    AVANZA onda_tam;
    GIRADERECHA 30;
    AVANZA onda_tam;
    GIRAIZQUIERDA 60;
    AVANZA onda_tam;
    GIRADERECHA 30;
];
SUBELAPIZ;

CENTRO;
SUBELAPIZ;
ESPERA 2000;
OCULTATORTUGA;